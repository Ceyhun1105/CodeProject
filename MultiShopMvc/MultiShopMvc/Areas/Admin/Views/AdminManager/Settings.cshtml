@model AppUser


<div class="container-fluid" style="padding-top: 100px">

    <div class="container">
        <h1 style="text-align:center"> User Information</h1>
    </div>

    <div class="container-fluid">


        <form method="post" enctype="multipart/form-data">
            <div class="row pt-5 container">
                <div class="form-group col-4">
                    <label asp-for="FullName">FullName</label>
                    <input asp-for="FullName" class="form-control text-white" placeholder="FullName">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="PhoneNumber">Number</label>
                    <input asp-for="PhoneNumber" class="form-control text-white" placeholder="Number">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control text-white" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="ImageFile">Image</label>
                    <input asp-for="ImageFile" class="form-control text-white">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                    <div class="pt-3">
                        @if(ViewBag.Image is not null)
                        {
                            <img width="250px" src="~/uploads/user/@ViewBag.Image" />
                        } 
                    </div>
                </div>
            </div>
            <div class="container text-center pt-5">
                <button type="submit" class="btn btn-outline-primary">Update</button>
                <a class="btn btn-outline-danger" asp-action="index" asp-controller="offer">Cancel</a>
            </div>
        </form>

    </div>
</div>




