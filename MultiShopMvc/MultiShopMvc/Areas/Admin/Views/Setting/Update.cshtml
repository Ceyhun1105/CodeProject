@model Setting


<div class="container-fluid" style="padding-top: 100px">

    <div class="container">
        <h1 style="text-align:center"> Update Setting</h1>
    </div>

    <div class="container-fluid">


        <form method="post" enctype="multipart/form-data">
            <div class="row pt-5 container">
                <div class="col-4"></div>
                <div class="form-group col-4">
                    <label asp-for="Value">@Model.Key</label>
                    <input asp-for="Value" class="form-control text-white" placeholder="@Model.Key">
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>
                <div class="col-4"></div>
            </div>
            <div class="container text-center pt-5">
                <button type="submit" class="btn btn-outline-primary">Update</button>
                <a class="btn btn-outline-danger" asp-action="index" asp-controller="setting">Cancel</a>
            </div>
        </form>

    </div>
</div>



