@model Slider


<div class="container-fluid" style="padding-top: 100px">

    <div class="container">
        <h1 style="text-align:center"> Update Slider</h1>
    </div>

    <div class="container-fluid">


        <form method="post" enctype="multipart/form-data">
            <div class="row pt-5 container">
                <div class="form-group col-4">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control text-white" placeholder="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="RedirectUrl">RedirectUrl</label>
                    <input asp-for="RedirectUrl" class="form-control text-white" placeholder="RedirectUrl">
                    <span asp-validation-for="RedirectUrl" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" rows="5" class="form-control text-white" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="ImageFile">Image</label>
                    <input asp-for="ImageFile" class="form-control text-white">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                    <div class="pt-3">
                        <img width="250px" src="~/uploads/slider/@ViewBag.Image" />
                    </div>
                </div>
            </div>
            <div class="container text-center pt-5">
                <button type="submit" class="btn btn-outline-primary">Update</button>
                <a class="btn btn-outline-danger" asp-action="index" asp-controller="slider">Cancel</a>
            </div>
        </form>

    </div>
</div>


